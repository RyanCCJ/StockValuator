# Application
DEBUG=false

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/stockvaluator

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=300

# JWT (change in production!)
SECRET_KEY=development-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Google OAuth (shared for login and Gmail API)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Gmail API (uses GOOGLE_CLIENT_ID/SECRET above)
GMAIL_REDIRECT_URI=http://localhost:8000/email/oauth/callback
GMAIL_REFRESH_TOKEN=  # Get from /email/oauth/authorize
GMAIL_USER_EMAIL=  # Your Gmail address for sending alerts

# SMTP fallback (optional, used if Gmail API not configured)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_FROM=
# MAIL_FROM_NAME=StockValuator
